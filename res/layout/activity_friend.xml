<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0f7fa"
    android:orientation="vertical" >

     <ImageView
         android:id="@+id/imageView1"
         android:layout_width="110dp"
         android:layout_height="100dp"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:src="@drawable/person" />

     <TextView
         android:id="@+id/commentCnt"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/imageView1"
         android:text="15 Question Asked"
         android:textColor="#673ab7"
         android:textSize="14dp" />

     <TextView
         android:id="@+id/view"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/imageView1"
         android:layout_marginBottom="26dp"
         android:layout_toLeftOf="@+id/ask"
         android:text="Cagla Arikan"
         android:textColor="#006064"
         android:textSize="18dp"
         android:textStyle="bold" />

     <EditText
         android:id="@+id/commentBox"
         android:layout_width="270dp"
         android:layout_height="60dp"
         android:layout_alignBottom="@+id/ask"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="27dp"
         android:background="#ffffff"
         android:ems="10"
         android:hint="Write your question here..."
         android:inputType="text"
         android:textSize="14dp"
         android:textStyle="bold" >

         <requestFocus />
     </EditText>

     <Button
         android:id="@+id/ask"
         android:layout_width="70dp"
         android:layout_height="30dp"
         android:layout_alignRight="@+id/commentBox"
         android:layout_below="@+id/commentCnt"
         android:layout_marginTop="150dp"
         android:background="#0097a7"
         android:text="Ask"
         android:textColor="#ffffff"
         android:textSize="12dp" />

     <TextView
         android:id="@+id/success"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/commentBox"
         android:layout_alignLeft="@+id/commentBox"
         android:layout_marginBottom="24dp"
         android:text="  "
         android:textColor="#c62828"
         android:textSize="16dp" />

</RelativeLayout>
